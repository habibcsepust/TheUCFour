@model TheUCFour.Models.PurchaseViewModel
@{
    ViewBag.Title = "SupplierDetails";
}


<span>
    @Html.ActionLink("Add Supplier", "AddPurchase", "Purchase", new { @*Id = supplier.Id*@},
       new { @class = "pull-right", style = "text-decoration:none;margin-top:2%;" +
       "Background:Green;Padding:6px 15px;color:white" })
</span>

<h3>Supplier Details</h3>

@section MyStyle
{
<style>
    .table-dark {
        color: #fff;
        background-color: #663300;
    }

        .table-dark th,
        .table-dark td,
        .table-dark thead th {
            border-color: #FF860D;
        }
</style>
}

<table class="table table-dark">
    <thead>
        <tr>
            <th>SL</th>
            <th>Supplier</th>
            <th>Date</th>
            <th>Invoice Number</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int sl = 1;
        }
        @foreach (var supplier in Model.Purchases)
        {
            <tr>
                <td>@(sl++)</td>
                <td>@supplier.Supplier.Name</td>
                <td>@supplier.Date</td>
                <td>@supplier.InvoiceNo</td>
                <td>
                    <span>
                        @Html.ActionLink("View", "PurchaseDetails", "Purchase", new { Id = supplier.Id },
                           new { @class = "fa fa-eye", style = "color:white;text-decoration:none;font-weight:bold;" })
                    </span>
                </td>
            </tr>
        }
    </tbody>
</table>
