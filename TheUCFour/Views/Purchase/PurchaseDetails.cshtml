@model TheUCFour.Models.PurchaseViewModel
@{
    ViewBag.Title = "PurchaseDetails";
}
<h2 style="color:darkolivegreen;text-align:center">
    Purchase Details
</h2>

<span>
    @Html.ActionLink("Add New", "AddPurchase", "Purchase",
       new { @class = "pull-right", style = "text-decoration:none;margin-top:2%;" +
       "Background:#592a4d;Padding:6px 15px;color:white;font-weight:bold;"
       })
</span>


@section MyStyle
{
    <style>
        .table-dark {
            color: #fff;
            background-color: #663300;
            width:600px;
            margin:0 auto;
        }

        #details {
            color: #fff;
            background-color: #5f6163;
            margin: 0 auto;
        }
            
            .table-dark th,
            .table-dark td,
            .table-dark thead th {
                border-color: #FF860D;
            }
    </style>
}
    <table class="table table-dark table-bordered">
        <h3 style="margin-left:17.75%;color:black">Supplier</h3>
        <tbody>
            @foreach (var purchase in Model.Purchases)
            {
                <tr>
                    <th>Supplier</th>
                    <td>@purchase.Supplier.Name</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>@purchase.Date</td>
                </tr>
                <tr>
                    <th>Invoice Number</th>
                    <td>@purchase.InvoiceNo</td>
                </tr>
            }

        </tbody>
    </table>




<table class="table table-bordered" id="details">
    <h3 style="color:black;">Product List</h3>
    <thead>
        <tr>
            <th>Sl</th>
            <th>Category</th>
            <th>Product</th>
            <th>Code</th>
            @*<th>Available Qty</th>*@
            <th>Manufacture Date</th>
            <th>Expire Date</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Total Price</th>
            <th>Previous Unit Price</th>
            <th>Previous MRP</th>
            <th>MRP</th>
            <th>Remarks</th>
        </tr>
    </thead>

    <tbody>
        @{
            int i = 1;
            var PurchaseDetailsViewModel = ViewBag.Details;
        }
        @foreach (var purchaseList in PurchaseDetailsViewModel)
        {

            <tr>
                <td>@(i++)</td>
                @foreach (var category in ViewBag.Category)
                {
                    if (category.Id == purchaseList.CategoryId)
                    {
                        <td>@category.Name</td>
                    }

                }
                <td>@purchaseList.Product.Name</td>
                <td>@purchaseList.Code</td>
                @*<td>@purchaseList.AvailableQuantity</td>*@
                <td>@purchaseList.ManufactureDate</td>
                <td>@purchaseList.ExpireDate</td>
                <td>@purchaseList.Quantity</td>
                <td>@purchaseList.UnitPrice</td>
                <td>@purchaseList.TotalPrice</td>
                <td>@purchaseList.PreviousUnitPrice</td>
                <td>@purchaseList.PreviousMRP</td>
                <td>@purchaseList.MRP</td>
                <td>@purchaseList.Remarks</td>

            </tr>
        }

    </tbody>
</table>
