@model TheUCFour.Models.SaleViewModel
@{
    ViewBag.Title = "SalesDetails";
}
<h2 style="color:darkolivegreen;text-align:center">
    Sales Details
</h2>

<span>
    @Html.ActionLink("Add New", "Add", "Sale",
       new { @class = "pull-right", style = "text-decoration:none;margin-top:2%;" +
       "Background:#592a4d;Padding:6px 15px;color:white;font-weight:bold;"
       })
</span>


@section MyStyle
{
    <style>
        .table-dark {
            color: #fff;
            background-color: #663300;
            width: 600px;
            margin: 0 auto;
        }

        #details {
            color: #fff;
            background-color: #5f6163;
            margin: 0 auto;
        }

        .table-dark th,
        .table-dark td,
        .table-dark thead th {
            border-color: #FF860D;
        }
    </style>
}
<table class="table table-dark table-bordered">
    <h3 style="margin-left:17.75%;color:black">Customer</h3>
    <tbody>
        @foreach (var purchase in Model.Sales)
        {
            <tr>
                <th>Customer</th>
                <td>@purchase.Customer.Name</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>@purchase.Date</td>
            </tr>
            <tr>
                <th>LoyalityPoint</th>
                <td>@purchase.Customer.LoyalityPoint</td>
            </tr>
        }

    </tbody>
</table>




<table class="table table-bordered" id="details">
    <h3 style="color:black;">Sale Information</h3>
    <thead>
        <tr>
            <th>Sl</th>
            <th>Category</th>
            <th>Product</th>
            @*<th>Date</th>*@
            <th>GrandTotal</th>
            <th>Discount</th>
            <th>DiscountAmount</th>
        <th>PayableAmount</th>
            <th>Quantity</th>
            <th>AvailableQuantity</th>
            <th>MRP</th>
            <th>TotalMRP</th>

        </tr>
    </thead>

    <tbody>
        @{
            int i = 1;
            var SalesDetailsViewModel = ViewBag.Details;
        }
        @foreach (var salesList in SalesDetailsViewModel)
        {

        <tr>
            <td>@(i++)</td>
            @foreach (var category in ViewBag.Category)
            {
                if (category.Id == salesList.CategoryId)
                {
                    <td>@category.Name</td>
                }

            }
            <td>@salesList.Product.Name</td>
            @*<td>@salesList.Date</td>*@
            @*<td>@salesList.</td>*@
            <td>@salesList.Sale.GrandTotal</td>
            <td>@salesList.Sale.Discount</td>
            <td>@salesList.Sale.DiscountAmount</td>
        <td>@salesList.Sale.PayableAmount</td>
            <td>@salesList.Quantity</td>
            <td>@salesList.AvailableQuantity</td>
            <td>@salesList.MRP</td>
            <td>@salesList.TotalMRP</td>


        </tr>
        }

    </tbody>
</table>
